{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.9/MicrosoftTeams.schema.json",
    "manifestVersion": "1.9",
    "version": "1.0.0",
    "id": "{{localSettings.teamsApp.teamsAppId}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Microsoft, Inc.",
        "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}",
        "privacyUrl": "{{{localSettings.frontend.tabEndpoint}}}/index.html#/privacy",
        "termsOfUseUrl": "{{{localSettings.frontend.tabEndpoint}}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Assignments News Prompt",
        "full": "This field is not used-local-debug"
    },
    "description": {
        "short": "Prompt your students to respond to current news!",
        "full": "This app lets you select a news article for your students to read. Students must read the article and respond to your prompt."
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "{{{localSettings.frontend.tabEndpoint}}}/index.html#/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "showLoadingIndicator": true,
    "validDomains": [],
    "webApplicationInfo": {
        "id": "{{localSettings.auth.clientId}}",
        "resource": "{{{localSettings.auth.applicationIdUris}}}"
    }
}